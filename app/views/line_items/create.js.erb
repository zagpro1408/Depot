// После оформления заказа, на главной странице присутствует уведомление "Спасибо за заказ"
// При добавлении товара в корзину уведомление скрывается
$('#notice').hide();

// Если в корзину положили первый товар, то она появляется в течение 1 секунды
if ($('#cart tr').length == 1) { $('#cart').show('blind', 1000); }

// Если в корзину положили первый товар, то он подсвечивается на 1 секунду яркозеленым цветом
$('#cart').html("<%=j render(@cart) %>");

$('#current_item').css({'background-color':'#88ff88'}).
  animate({'background-color':'#114411'}, 1000);
